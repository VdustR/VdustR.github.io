@require 'code'
@require '~prism-theme-night-owl/build/style.css'


@font-face
  font-family: 'Recursive'
  font-weight: 300 1000
  font-style: oblique 0deg 14deg
  src: url("https://cdn.jsdelivr.net/gh/arrowtype/recursive@v1.070/fonts/ArrowType-Recursive-1.070/Recursive_Web/woff2_variable/Recursive_VF_1.070.woff2")

html, body
  background-color $codeBgColor

body
  font-family 'Recursive', source-han-sans-cjk-tc, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  font-variation-settings "MONO" var(--cm-mono),"CASL" var(--cm-casl),"wght" var(--cm-wght),"slnt" var(--cm-slnt),"CRSV" var(--cm-crsv)
  --cm-wght 400
  --cm-mono 0
  --cm-casl 0.5
  --cm-slnt 0
  --cm-crsv 0.5

blockquote
  font-family 'Recursive', source-han-serif-tc, serif
  font-variation-settings "MONO" var(--cm-mono),"CASL" var(--cm-casl),"wght" var(--cm-wght),"slnt" var(--cm-slnt),"CRSV" var(--cm-crsv)
  --cm-slnt -15

h1, h2, h3, h4, h5, h6
  font-variation-settings "MONO" var(--cm-mono),"CASL" var(--cm-casl),"wght" var(--cm-wght),"slnt" var(--cm-slnt),"CRSV" var(--cm-crsv)
  --cm-wght 500
  --cm-casl 1

.navbar
  background-color $codeBgColor

.sidebar
  background-color $codeBgColor

.content:not(.custom)
  p.demo
    border 1px solid $borderColor

kbd
  background $codeBgColor
  border solid 0.15rem $borderColor
  border-bottom solid 0.25rem $borderColor

blockquote
  color #637777
  border-left .5rem solid #637777

code, kbd, .line-number
  font-family 'Recursive', source-han-sans-cjk-tc, source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace
  font-variation-settings "MONO" var(--cm-mono),"CASL" var(--cm-casl),"wght" var(--cm-wght),"slnt" var(--cm-slnt),"CRSV" var(--cm-crsv)
  --cm-mono: 1;
  --cm-casl: 1;
code
  .token.keyword
    font-style: italic

tr
  border-top 1px solid $borderColor
  &:nth-child(2n)
    background-color #0e293f

th, td
  border 1px solid $borderColor
  padding .6em 1em
